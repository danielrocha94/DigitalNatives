<h1>All Users</h1>
<div>
  <ul class="info" id="list">
    <% @users.each do |user|%>
      <li class="user">
        <%= user.name %>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <%= form_for(@user, remote: true) do |f| %>
     <%= f.label :name %>
     <%= f.text_field :name, class: 'form-control'%>

     <%= f.label :status %>
     <%= f.text_field :status, class: 'form-control' %>

     <%= f.label :role %>
     <%= f.collection_select :role_id , Role.all, :id, :name, class: 'form-control' %>

     <%= f.submit "Create User", class: 'form-control' %>
  <% end %>
</div>

